<%- include('../partials/header') %>

<section id="show-page">
  <div>Name: </div>
  <div><%= character.name %></div>
  <div>Race: </div>
  <div><%= character.race %></div>
  <div>Class: </div>
  <div><%= character.class %></div>
  </section>


<br><br><h2>Notes</h2>
<form id="add-note-form" method="POST"
  action="/characters/<%= n._id %>/notes">
  <label>Notes:</label>
  <textarea name="content"></textarea>
  <input type="submit" value="Add Note">
</form>

<% if (character.notes.length) { %>
  <table>
    <thead>
      <tr>
        <th>Date</th>
        <th>Note</th>
      </tr>
    </thead>
    <tbody>
      <% let total = 0 %>
      <% character.notes.forEach(function(n) { %>
        <tr>
          <!-- .toLocaleDateString() provides a more friendly date format -->
          <td><%= n.date.toLocaleDateString() %></td>
          <td><%= n.note %></td>
          <td>
            <% if (user?._id.equals(r.user)) { %>
              <form action="/notes/<%= n._id %>?_method=DELETE" method="POST">
                <button type="submit">X</button>
              </form>
            <% } %>
          </td>
        </tr>
      <% }); %>
      <tr>
        <td colspan="3"></td>
        <td><strong><%= (total / character.notes.length).toFixed(1) %></strong></td>
      </tr>
    </tbody>
  </table>
<% } else { %>
  <h5>No Notes Yet</h5>
<% } %>
  
<%- include('../partials/footer') %>

